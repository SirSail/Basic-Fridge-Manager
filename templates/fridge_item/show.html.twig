{% extends 'base.html.twig' %}

{% block title %}Fridge Item Details{% endblock %}

{% block body %}
<style>
    .main-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .main-wrapper h1 { margin-bottom: 1em; }
    .main-wrapper form { margin-top: 2em; }
    .main-wrapper label { display: block; margin-bottom: 0.5em; }
    .main-wrapper input, .main-wrapper button { margin-bottom: 1em; }
    .main-wrapper input { padding: 0.5em; width: 100%; }
    .main-wrapper button { padding: 0.5em 1em; }
</style>
<div class="main-wrapper">
    <h1>Fridge Item Details</h1>
    {# Odwo≈Çanie do fridgeItem.fridge lub fridgeItem.fridgeId #}
    <p><strong>Fridge:</strong> {{ fridgeItem.fridge ? fridgeItem.fridge.name : 'Unknown Fridge' }}</p>
    <p><strong>Item:</strong> {{ fridgeItem.item ? fridgeItem.item.name : 'Unknown Item' }}</p>
    <p><strong>Quantity:</strong> {{ fridgeItem.quantity }}</p>
    <p><strong>Expiration Date:</strong> {{ fridgeItem.expirationDate ? fridgeItem.expirationDate|date('Y-m-d') : 'N/A' }}</p>
    <a href="{{ path('app_fridge_item_list') }}">Back to list</a>
</div>
{% endblock %}
