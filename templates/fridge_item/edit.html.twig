{% extends 'base.html.twig' %}

{% block title %}Edit Fridge Item{% endblock %}

{% block body %}
<style>
    .main-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .main-wrapper h1 { margin-bottom: 1em; }
    .main-wrapper form { margin-top: 2em; }
    .main-wrapper label { display: block; margin-bottom: 0.5em; }
    .main-wrapper input, .main-wrapper button { margin-bottom: 1em; }
    .main-wrapper input { padding: 0.5em; width: 100%; }
    .main-wrapper button { padding: 0.5em 1em; }
</style>
<h1>Edytuj przedmioty w lodówce</h1>

<form method="POST" action="{{ path('app_fridge_item_edit', { id: fridgeItem.id }) }}">
    <label for="fridge">Lodówka:</label>
    <select name="fridge_id" id="fridge">
        {% for fridge in fridges %}
            <option value="{{ fridge.id }}" {% if fridgeItem.fridge.id == fridge.id %}selected{% endif %}>
                {{ fridge.name }}
            </option>
        {% endfor %}
    </select>

    <label for="item">Przedmiot:</label>
    <select name="item_id" id="item">
        {% for item in items %}
            <option value="{{ item.id }}" {% if fridgeItem.item.id == item.id %}selected{% endif %}>
                {{ item.name }}
            </option>
        {% endfor %}
    </select>

    <label for="quantity">Liczebność:</label>
    <input type="number" name="quantity" id="quantity" value="{{ fridgeItem.quantity }}" min="1">

    <label for="expiration_date">Data ważności</label>
    <input type="date" name="expiration_date" id="expiration_date" value="{{ fridgeItem.expirationDate ? fridgeItem.expirationDate|date('Y-m-d') : '' }}">

    <input type="submit" value="Save">
</form>

{% endblock %}
